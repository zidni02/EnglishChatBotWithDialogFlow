<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"

    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/robot3" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Welcome to Bot Chat"
            android:textSize="25sp"
            android:textStyle="bold" />

    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_margin="5dp"
        android:textAllCaps="true"
        android:id="@+id/usernameHello"
        android:fontFamily="@font/josefin_sans_bold"
        android:textColor="@android:color/black"
        android:text="Hello"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="I am your assistant bot.\nLet's start conversation"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="italic" />
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/openChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:backgroundTint="#2196F3"
            app:rippleColor="@android:color/holo_blue_dark"
            android:text="Start Chatting"
            android:textSize="20sp"
            app:elevation="5dp"
            app:strokeColor="@android:color/holo_blue_dark" />

    </LinearLayout>
    <Button
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:backgroundTint="#2196F3"
        app:rippleColor="@android:color/holo_blue_dark"
        android:text="Logout"
        android:textSize="20sp"
        app:elevation="5dp"
        app:strokeColor="@android:color/holo_blue_dark" />
</RelativeLayout>